{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "outDir": "./",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDirs": ["./"],
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2022",
    "types": ["node"]
  },
  "include": ["./index.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "coverage", "test"]
}
